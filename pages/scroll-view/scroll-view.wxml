<!--pages/scroll-view/scroll-view.wxml-->
 <!-- 1.水平滚动  scroll-x -->
<scroll-view class="container1"   scroll-x >
  <view wx:for="{{20}}" class="item1">{{item}}</view>
</scroll-view>

 <!-- 2.垂直滚动  scroll-y-->
 <scroll-view class="container2"   scroll-y >
  <view wx:for="{{20}}" class="item2">{{item}}</view>
</scroll-view>

<!-- 3.其他补充   -->
 <scroll-view class="container2" bindscroll="handleScroll"  scroll-y >
  <view wx:for="{{20}}" class="item2">{{item}}</view>
</scroll-view>
