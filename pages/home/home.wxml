<!--pages/home/home.wxml-->
<!-- 1.数据绑定 使用  mustache  语法 -->
<view>hello {{user}}</view>

<!-- 2.列表展示  wx:for  -->
<view wx:for="{{users}}" wx:for-item="users" wx:key="index">
  我是：{{users.name}} 我今年：{{users.age}}岁 我是一个小：{{users.gender}}孩
</view>

<!-- 事件监听 -->
<view>当前计数：{{counter }}</view>
<button size="mini" bindtap="addClick">+1</button>
<button size="mini" bindtap="subClick">-1</button>
<view>
  <open-data type="userNickName"></open-data>
  <view class="user-photo">
    <open-data type="userAvatarUrl" ></open-data>
  </view>
</view>



<view>
  <button open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo" size="mini">获取权限</button>
  <text>{{userInfo.nickName}}</text>
  <image src="{{userInfo.avatarUrl}}" class="user-photo"></image>
</view>